@model MvcOTEL.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OdaTeslim";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("TeslimGüncel", "Kirala", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>Hareket ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>Oda No</label>
        @Html.TextBoxFor(k => k.TBLOTEL.NO, new { @class = "form-control" })
        <br />
        <label>Müşteri</label>
        @Html.TextBoxFor(k => k.TBLMUSTERI.ADI, new { @class = "form-control" })
        <br />
        <label>Rezervasyon Tarihi</label>
        @Html.TextBoxFor(k => k.ALISTARIH, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Teslim Tarihi</label>
        @Html.TextBoxFor(k => k.VERISTARIHI, "{0: dd.MM.yyyy}", new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-danger">Teslim Et</button>
    </div>
}

