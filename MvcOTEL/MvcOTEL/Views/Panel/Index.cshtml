@model MvcOTEL.Models.Entity.TBLMUSTERI
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Müşteri Bilgileri</h2>
@using (Html.BeginForm("Index","Panel", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:15px">
        <tr>
            <td>
                @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.ADI, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Şifre Güncelle</button>
            </td>
        </tr>
    </table>
}

